/* === Shared === */
QStackedWidget, QPushButton, QRadioButton, QCheckBox,
QGroupBox, QStatusBar, QToolButton, QComboBox, QDialog, QMdiSubWindow,QTabWidget {
    background-color: #edf2f7;
}

/* === QWidget === */
QWidget:window {
    background: #ffffff;
}

